{
  "appId": "com.company.app-name",
  "productName": "My Awesome App",
  "copyright": "Copyright Â© year ${author}",
  "files": [
    {
      "from": "dist/src",
      "to": "src/",
      "filter": ["**/*"]
    },
    "package.json"
  ],
  "extraFiles": [
    {
      "from": "engine/dist/",
      "to": "lib/",
      "filter": [
        "**/**"
      ]
    }

  ],
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": "nsis",
    "icon": "public/assets/media/icon/app.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}